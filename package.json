{
    "name": "chaos",
    "version": "1.0.0",
    "scripts": {
        "build": "tsc",
        "start": "node --unhandled-rejections=strict dist/index.js",
        "dev": "node --require ts-node/register src/index.ts",
        "test": "jest",
        "clean": "rm -vfr node_modules reports",
        "fclean": "rm -vfr node_modules reports dist"
    },
    "description": "WIP A service to keep track of other services, servers and workstations",
    "main": "dist/index.js",
    "private": false,
    "dependencies": {
        "ajv": "^8.6.0",
        "ajv-formats": "^2.1.0",
        "express": "^4.17.1",
        "express-idempotency": "^1.0.4",
        "pg": "^8.6.0",
        "typeorm": "^0.2.34"
    },
    "devDependencies": {
        "@tsconfig/node16": "^1.0.1",
        "@types/express": "^4.17.12",
        "@types/jest": "^25.2.3",
        "@types/node": "^15.12.3",
        "jest": "^27.0.4",
        "jest-junit": "^10.0.0",
        "ts-jest": "^27.0.0",
        "ts-node": "^10.0.0",
        "typescript": "^4.2.4"
    },
    "jest": {
        "transform": {
            "^.+\\.ts?$": "ts-jest"
        },
        "testRegex": "(/tests/.*|\\.(test|spec))\\.(ts|tsx)$",
        "testPathIgnorePatterns": [
            "/lib/",
            "/node_modules/"
        ],
        "moduleFileExtensions": [
            "ts",
            "js",
            "json"
        ],
        "collectCoverage": false,
        "collectCoverageFrom": [
            "src/**/*.{ts,tsx}"
        ],
        "coverageReporters": [
            "html",
            "json"
        ],
        "reporters": [
            "default",
            "jest-junit"
        ],
        "testEnvironment": "node"
    },
    "jest-junit": {
        "suiteName": "jest tests",
        "outputDirectory": "./reports/jest",
        "outputName": "junit.xml",
        "classNameTemplate": "{classname}",
        "titleTemplate": "{title}",
        "ancestorSeparator": " â€º ",
        "usePathForSuiteName": "true"
    }
}
